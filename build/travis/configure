#!/bin/bash

set -e

./configure \
  --with-ssl \
  --with-mysql \
  --with-apps \
  --enable-dtls \
  --enable-ipv6 \
  --with-radius \
  --with-repro \
  --enable-repro-plugins \
  DEPS_PYTHON_CFLAGS=-I/usr/include/python2.7 \
  DEPS_PYTHON_LIBS=-lpython2.7 \
  PYCXX_SRCDIR=/usr/share/python2.7/CXX/Python2 \
  --with-python \
  --with-rend \
  --with-c-ares

