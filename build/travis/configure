#!/bin/bash

set -e

./configure \
  --with-ssl \
  --with-mysql \
  --with-apps \
  --enable-dtls \
  --enable-ipv6 \
  --with-radius \
  --with-repro \
  --enable-repro-plugins \
  DEPS_PYTHON_CFLAGS="`/usr/bin/python2.7-config --cflags`" \
  DEPS_PYTHON_LIBS="`/usr/bin/python2.7-config --ldflags`"
  PYCXX_SRCDIR=/usr/share/python2.7/CXX/Python2 \
  --with-python \
  --with-rend \
  --with-c-ares

